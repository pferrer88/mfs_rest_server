= simple_form_for @component, :html => { :class => 'form-horizontal' } do |f|
  = f.input :service_id
  = f.input :code
  = f.input :name
  = f.input :shortName
  = f.input :description
  = f.input :isActive
  = f.input :uomCode
  = f.input :uomUnit
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), components_path, :class => 'btn'
