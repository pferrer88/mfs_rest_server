    %th Name
    %th Shortname
    %th Description
    %th Isactive
    %th Uomcode
    %th Uomunit
    %th
    %th
    %th

  - @components.each do |component|
    %tr
      %td= component.service
      %td= component.code
      %td= component.name
      %td= component.shortName
      %td= component.description
      %td= component.isActive
      %td= component.uomCode
      %td= component.uomUnit
      %td= link_to 'Show', component
      %td= link_to 'Edit', edit_component_path(component)
