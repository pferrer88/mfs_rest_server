= simple_form_for @service, :html => { :class => 'form-horizontal' } do |f|
  = f.input :code
  = f.input :name
  = f.input :shortName
  = f.input :description
  = f.input :isActive
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), services_path, :class => 'btn'
