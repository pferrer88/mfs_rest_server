- model_class = Route
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:driver_id) + ':'
  %br
  = @route.driver_id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @route.name
%p
  %strong= model_class.human_attribute_name(:startDT) + ':'
  %br
  = @route.startDT
%p
  %strong= model_class.human_attribute_name(:isComplete) + ':'
  %br
  = @route.isComplete
%p
  %strong= model_class.human_attribute_name(:completeDT) + ':'
  %br
  = @route.completeDT

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), routes_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_route_path(@route), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), route_path(@route), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
